<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="container">
                <h1>Create Product</h1>
                <form action="/admin/create-product" method="post">

                    <div class="col-auto mb-2">
                        <label type="text">Product Image url:</label>
                        <input type="text" name="imageUrl" class="form-control">
                    </div>
                    <div class="col-auto mb-2">
                        <label type="text">Product title:</label>
                        <input type="text" name="title" class="form-control">
                    </div>
                    <div class="col-auto mb-2">
                        <label type="text">Description:</label>
                        <textarea name="description" class="form-control" cols="10" rows="5"></textarea>

                    </div>
                    <div class="col-auto mb-2">
                        <label type="text">Price:</label>
                        <input type="number" value="0.00" min="0" step="0.01" name="price" class="form-control">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-3">Create</button>
                    </div>
                </form>
            </div>
            <%- include('../includes/end.ejs') %>