<%- include('../includes/head.ejs') %>
    </head>
    <style>
        body {
            background-color: #f5f5f5;
        }

        .login-container {
            background-color: #ffffff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            border-radius: 15px;
            text-align: center;
            margin-top: 100px;
        }

        .login-title {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 30px;
            color: #007bff;
        }

        .form-control {
            border-radius: 25px;
            padding: 15px;
            margin-bottom: 20px;
            font-size: 18px;
        }

        .form-control:focus {
            box-shadow: none;
        }

        .login-button {
            background-color: #007bff;
            color: #ffffff;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            padding: 15px 30px;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .login-button:hover {
            background-color: #0056b3;
        }

        .toggle-password {
            cursor: pointer;
            color: #007bff;
        }
    </style>

    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 login-container">
                    <%if(errorMsg.length>0) {%>
                        <div class="container mt-5">
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>
                                    <%=errorMsg%>
                                </strong>
                            </div>
                        </div>
                        <%}%>
                            <div class="login-title">eShop - Sign Up</div>
                            <form class="needs-validation" novalidate action="/register" method="POST" id="signupForm">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="phone" name="phone"
                                        placeholder="Enter your phone" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid phone number.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="Enter your email" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid email address.
                                    </div>
                                </div>
                                <div class="mb-3 password-group">
                                    <input type="password" class="form-control" id="password" name="password"
                                        placeholder="Enter your password" required>
                                    <div class="invalid-feedback">
                                        Password is required.
                                    </div>
                                </div>
                                <div class="mb-3 password-group">
                                    <input type="password" class="form-control" id="confirmPassword"
                                        name="confirmPassword" placeholder="Confirm your password" required>
                                    <div class="invalid-feedback">
                                        Please confirm your password.
                                    </div>
                                    <span class="toggle-password">Show Password</span>
                                </div>

                                <button type="submit" class="mb-2 btn login-button w-100">Sign Up</button>
                                <span class="mt-2 toggle-password"><a href="/login">Already have an account?</a></span>
                            </form>
                </div>
            </div>
        </div>

        <script>
            // Bootstrap form validation
            (function () {
                'use strict';

                var signupForm = document.getElementById('signupForm');
                var passwordInput = document.getElementById('password');
                var confirmPasswordInput = document.getElementById('confirmPassword');
                var togglePassword = document.querySelector('.toggle-password');

                // signupForm.addEventListener('submit', function (event) {
                //     if (passwordInput.value !== confirmPasswordInput.value) {
                //         event.preventDefault();
                //         confirmPasswordInput.setCustomValidity("Passwords do not match");
                //     } else {
                //         confirmPasswordInput.setCustomValidity('');
                //     }

                //     if (!signupForm.checkValidity()) {
                //         event.preventDefault();
                //         event.stopPropagation();
                //     }

                //     signupForm.classList.add('was-validated');
                // }, false);

                // Show Password functionality
                togglePassword.addEventListener('click', function () {
                    var type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    confirmPasswordInput.setAttribute('type', type);
                    togglePassword.textContent = type === 'password' ? 'Show Password' : 'Hide Password';
                });
            })();
        </script>
    </body>

    </html>