<%- include('../includes/head.ejs') %>

    <style>
        /* ... your existing styles ... */
        body {
            background-color: #f5f5f5;
        }

        .login-container {
            background-color: #ffffff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            border-radius: 15px;
            text-align: center;
            margin-top: 100px;
        }

        .login-title {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 30px;
            color: #007bff;
        }

        .form-control {
            border-radius: 25px;
            padding: 15px;
            margin-bottom: 20px;
            font-size: 18px;
        }

        .form-control:focus {
            box-shadow: none;
        }

        .login-button {
            background-color: #007bff;
            color: #ffffff;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            padding: 15px 30px;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .login-button:hover {
            background-color: #0056b3;
        }

        .toggle-password {
            cursor: pointer;
            color: #007bff;
        }
    </style>

    </head>

    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 login-container">
                    
                    <%if(errorMsg.length>0) {%>
                        <div class="container mt-5">
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>
                                    <%=errorMsg%>
                                </strong>
                            </div>
                        </div>
                        <% }%>
                            <div class="login-title">eShop - Forgot Password</div>
                            <form class="needs-validation" novalidate action="/reset-password" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="mb-3">
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="Enter your email" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid email address.
                                    </div>
                                </div>
                                <button type="submit" class="btn login-button w-100">Reset Password</button>
                            </form>
                            <a href="/login">Back to login</a>
                </div>
            </div>
        </div>

        <script>
            // Bootstrap form validation
            (function () {
                'use strict';

                var forms = document.querySelectorAll('.needs-validation');

                Array.from(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add('was-validated');
                    }, false);
                });

                // Show Password functionality
                var passwordInput = document.getElementById('password');
                var togglePassword = document.querySelector('.toggle-password');

                togglePassword.addEventListener('click', function () {
                    var type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    togglePassword.textContent = type === 'password' ? 'Show Password' : 'Hide Password';
                });
            })();
        </script>
    </body>

    </html>