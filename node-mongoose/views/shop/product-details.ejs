<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="container mt-5">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Product Image -->
                        <img src="<%= product.imageUrl %>" class="img-fluid rounded" alt="<%= product.title %>">
                    </div>

                    <div class="col-md-6">
                        <div class="product-details pl-md-5">
                            <div class="mb-4">
                                <!-- Product Name -->
                                <h1 class="font-weight-bold">
                                    <%= product.title %>
                                </h1>
                            </div>

                            <div class="mb-4">
                                <!-- Product Detail -->
                                <p class="text-muted">
                                    <%= product.description %>
                                </p>
                            </div>

                            <div class="mb-4">
                                <!-- Product Price -->
                                <h3 class="text-primary">Price: $<%= product.price %>
                                </h3>
                            </div>

                            <div>
                                <% if(isAuthenticated) { %>
                                    <!-- Add to Cart Button (if authenticated) -->
                                    <%- include('../includes/add-to-cart.ejs', { product: product }) %>
                                        <% } %>
                            </div>

                        </div>
                    </div>
                </div>
            </main>

            <%- include('../includes/end.ejs') %>
    </body>

    </html>